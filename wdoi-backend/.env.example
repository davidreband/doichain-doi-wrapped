# wDOI Backend Configuration

# Environment
NODE_ENV=development
PORT=3001

# Doichain Configuration
USE_MOCK_DOI_DATA=true
USE_ELECTRUMX=true

# ElectrumX Servers (Production - REAL endpoints) - comma separated list (REQUIRED)
DOICHAIN_ELECTRUMX_SERVERS=

# Traditional RPC Fallback
DOICHAIN_RPC_URL=https://rpc.doichain.org
DOICHAIN_RPC_USER=
DOICHAIN_RPC_PASSWORD=

# DOI Address Configuration
# Production custodial address for reserves (REQUIRED)
DOI_CUSTODIAL_ADDRESS=

# Test address for development (can be same as custodial for testing)
DOI_TEST_ADDRESS=dc1qvrs6j3j0cn8jzgt8au0rnxxq40sz8j0lrr6k7n

# Cache Configuration
# Cache timeout in milliseconds (5 minutes default)
DOI_CACHE_TTL=300000

# Mock balance for testing
MOCK_DOI_BALANCE=1245.67

# Fallback balance when all sources fail
FALLBACK_DOI_BALANCE=0

# Ethereum Configuration (for wDOI contract)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
WDOI_CONTRACT_ADDRESS=0xA2B6c1a7EFB3dFa75E2d9DF1180b02668c06da72

# Security
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:8002,http://127.0.0.1:8002,http://45.83.141.11:8002,https://45.83.141.11:8002
API_RATE_LIMIT_PER_MINUTE=100

# Logging
LOG_LEVEL=info